@model SignalRPushNotification.Server.Models.PushNotificationModel
@*@{
    ViewData["Title"] = "Menus";
}*@

<!<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Menus</title>




    <!-- Page level plugin CSS-->
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin.css" rel="stylesheet">

</head>
<body id="page-top">

    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">

        <a class="navbar-brand mr-1" href="index.html">Menus</a>

    </nav>

    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="sidebar navbar-nav">
            <li class="nav-item">

                <a asp-controller="Account"
                   asp-action="Login">Register</a>


            </li>
            <li class="nav-item">
                <a class="nav-link" href="charts.html">
                    @*<p> @Html.ActionLink("Logout", "Logout", "Account", "http", null, null, null, null)   </p>*@

                </a>
            </li>
            <li class="nav-item">

            </li>
        </ul>
        <div class="container">
            <form method="post" asp-action="SelectMenuForToday" asp-controller="Admin">
                <div class="form-group">
                    <label asp-for="SelectedMenu">Todays Menu</label>
                    <select name="SelectedMenu" class="form-control" id="todaysMenu">
                        <option>Plov</option>
                        <option>Shurbo</option>
                        <option>Nothing</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Message">Message for users</label>
                    <textarea class="form-control" name="Message" id="messageTextarea" rows="3"></textarea>
                </div>
                
                <label label-for="CallerConnectionId">My Connection Id: </label>
                <input id="CallerConnectionId" name="CallerConnectionId" value="" class="form-control" readonly />
                <hr />

                <label label-for="ReciversConnectionIds">Recivers ConnectionId: </label>
                <input id="ReciversConnectionIds" name="ReciversConnectionIds" class="form-control" placeholder="CONNECTION_ID_1,CONNECTION_ID_2,..." />
                <div class="form-group">
                    <input type="submit" id="accept" value="Accept" class="btn btn-primary btn-block btn-lg" />
                </div>
            </form>

            <div class="row">
                <div class="col-md-6 col-sm-8 col-xs-12 col-md-offset-3 col-sm-offset-2">
                    <div class="contact-form">
                        <form action="" method="post">

                            <div class="row">
                                <div class="col-md-6 col-xs-12">
                                    <div class="form-group">
                                        <input type="text" name="first_name" class="form-control" placeholder="Name*" required="required" />
                                    </div>
                                </div>
                                <div class="col-md-6 col-xs-12">
                                    <div class="form-group">
                                        <input type="text" name="last_name" class="form-control" placeholder="Descreption" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="sticky-footer">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright © Your Website 2019</span>
            </div>
        </div>
    </footer>
    <!-- /.content-wrapper -->
    <!-- Bootstrap core JavaScript-->
    @*<script src="~/jquery/jquery.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>*@
</body>
</html>
