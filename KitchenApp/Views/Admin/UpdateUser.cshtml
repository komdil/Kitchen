
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/View/Shared/_Layout.cshtml";
}

<div id="login">
    <div class="container" asp-validation-summary="ModelOnly">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form method="post" id="login-form" class="form" asp-action="Login" asp-controller="Account">
                        <div class="validation" asp-validation-summary="ModelOnly" />
                        <h3 class="text-center text-info">Create New Menu</h3>
                        <div class="form-group">
                            <label class="text-info" asp-for="FirstName">FirstName</label>
                            <input type="text" name="FirstName" id="username" class="form-control">
                            <span asp-validation-for="FirstName" />
                        </div>
                        <div class="form-group">
                            <label class="text-info" asp-for="LastName">LastName</label>
                            <input type="text" name="LastName" id="username" class="form-control">
                            <span asp-validation-for="LastName" />
                        </div>
                        <div class="form-group">
                            <label class="text-info" asp-for="Login">Login</label>
                            <input type="text" name="Login" id="username" class="form-control">
                            <span asp-validation-for="Login" />
                        </div>
                        <div class="form-group">
                            <label class="text-info" asp-for="Password">Password</label>
                            <input type="password" name="Password" id="username" class="form-control">
                            <span asp-validation-for="Password" />
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-info btn-md" value="Update">
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>