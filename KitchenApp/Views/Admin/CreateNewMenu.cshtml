@model KitchenApp.Models.Menu
@{
    ViewData["Title"] = "CreateMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
                    <form method="post" id="login-form" class="form" asp-action="CreateNewMenu" asp-controller="Admin">
                        <div class="validation" asp-validation-summary="ModelOnly" />
                        <h3 class="text-center text-info">Create New Menu</h3>
                        <div class="form-group">
                            <label class="text-info" asp-for="Name">Name</label>
                            <input type="text" asp-for="Name" class="form-control" >
                            <span asp-validation-for="Name" />
                        </div>
                        <div class="form-group">
                            <label class="text-info" asp-for="Description">Description</label>
                            <input type="text" name="Description" id="username" class="form-control">
                            <span asp-validation-for="Description" />
                        </div>
                       
                        <div class="form-group">
                            <input type="submit" class="btn btn-info btn-md" value="Create">
                        </div>

                    </form>
