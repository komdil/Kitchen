@model KitchenApp.Models.Menu

@{
    ViewData["Title"] = "UpdateMenu";

    Layout = "~/Views/Shared/_Layout.cshtml";
}


                    <form method="post" id="login-form" class="form" asp-action="UpdateMenu" asp-controller="Admiin">
                        <h3 class="text-center text-info">UpdateMenu</h3>
                        <div class="form-group">
                            <label class="text-info" asp-for="Name">Name</label>
