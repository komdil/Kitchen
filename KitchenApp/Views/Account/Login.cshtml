
@using KitchenApp.Models;
@using KitchenApp.ViewsModel;

@{
    ViewData["Title"] = "Authorization";
}

<!Doctype html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/bootstrap/css//" rel="stylesheet" />

    <title>Authorization</title>
</head>
<body>
    <div id="login">
        <h3 class="text-center text-white pt-5">Login form</h3>
        <div class="container" asp-validation-summary="ModelOnly">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form method="post" id="login-form" class="form" asp-action="Login" asp-controller="Account">
                            <div class="validation" asp-validation-summary="ModelOnly" />
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                <label class="text-info" asp-for="Login">Login</label>
                                <input type="text" name="Login" id="username" class="form-control">
                                <span asp-validation-for="Login" />
                            </div>
                            <div class="form-group">
                                <label asp-for="password" class="text-info">Password:</label><br>
                                <input type="password" name="Password" id="password" class="form-control">
                                <span asp-validation-for="Password" />
                            </div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-info btn-md" value="SignUp">
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </body>

</html>

